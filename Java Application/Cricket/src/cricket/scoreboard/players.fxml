<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import org.controlsfx.control.CheckListView?>

<BorderPane prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cricket.scoreboard.PlayersController">
   <top>
      <HBox alignment="CENTER" prefHeight="57.0" prefWidth="300.0" BorderPane.alignment="CENTER">
         <children>
            <Text fx:id="title" strokeType="OUTSIDE" strokeWidth="0.0" text="Choose Player">
               <font>
                  <Font size="20.0" />
               </font>
            </Text>
         </children>
      </HBox>
   </top>
   <center>
      <CheckListView fx:id="playerlist" BorderPane.alignment="CENTER" />
   </center>
   <bottom>
      <HBox alignment="CENTER" prefHeight="54.0" prefWidth="300.0" BorderPane.alignment="CENTER">
         <children>
            <JFXButton onAction="#setPlayer" text="Go" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
