<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import org.controlsfx.control.CheckListView?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cricket.create.SelectteamController">
   <center>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Text fill="#db8621" strokeType="OUTSIDE" strokeWidth="0.0" text="Select Players">
               <font>
                  <Font size="22.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Text>
            <HBox alignment="CENTER" prefHeight="56.0" prefWidth="600.0">
               <children>
                  <Text fx:id="team1" fill="#c42d93" strokeType="OUTSIDE" strokeWidth="0.0" text="Team 1" textAlignment="CENTER" wrappingWidth="300.0">
                     <font>
                        <Font size="18.0" />
                     </font></Text>
                  <Text fx:id="team2" fill="#c42d93" strokeType="OUTSIDE" strokeWidth="0.0" text="Team 2" textAlignment="CENTER" wrappingWidth="300.0">
                     <font>
                        <Font size="18.0" />
                     </font></Text>
               </children>
            </HBox>
            <HBox alignment="TOP_CENTER" layoutX="10.0" layoutY="27.0" prefWidth="200.0">
               <children>
                  <VBox prefWidth="300.0">
                     <children>
                        <CheckListView fx:id="teamlist1" prefWidth="300.0" />
                     </children></VBox>
                  <VBox layoutX="260.0" layoutY="10.0" prefWidth="300.0">
                     <children>
                        <CheckListView fx:id="teamlist2" prefWidth="300.0" />
                     </children></VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <bottom>
      <AnchorPane prefHeight="40.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <JFXButton layoutX="485.0" layoutY="5.0" onAction="#goNext" prefHeight="30.0" prefWidth="70.0" style="-fx-background-color: #178b5b;" text="Go Next" textFill="WHITE" />
         </children>
      </AnchorPane>
   </bottom>
</BorderPane>
